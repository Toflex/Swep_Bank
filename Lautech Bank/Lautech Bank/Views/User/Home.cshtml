@model Lautech_Bank.Models.Withdrawal

@{
    ViewBag.Title = "Withdrawal Page";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}   
   <header id="header-plate" class="header h-fullscreen text-white bg-fixed bg-size-contain head-color">
    <div class="overlay opacity-95 myHeader"></div>
    <div class="container">
      <div class="row align-items-center h-100">
        <div class="col-md-8 mx-auto text-center">

          <h1 class="display-41" data-font="Raleway:800">Lautech Bank</h1>
          <p class="lead fw-400">Safest safe.</p>

          <form method="POST" class="rounded p-5 mt-7">
          
            <div class="row">
              <div class="col">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ti-search mt-1"></i></span>
                  </div>                  
                  <input type="text"  name="withdraw" class="form-control" placeholder="100.55">
                </div>
              </div>
                
              <div class="col-auto">
                <button class="btn btn-lg btn-primary" type="submit">Withdraw</button>
              </div>
            </div>
          </form>
            <span style="color:red;background-color:white;font-size:12pt; font-family:sans-serif;font-weight:bold;">@ViewBag.message</span>
        </div>
      </div>
    </div>
  </header><!-- /.header -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
