@model Lautech_Bank.Models.UserLogin

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="margin-top:10px;margin-bottom:8px;">
    <p>This application is built to simulate an E-Banking system.</p>
    <p>Press these @Html.ActionLink("link","Create","User") to create an account.</p>
</div>

<h4>Log In</h4>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

       <span style="color:red">@ViewBag.message</span>
    
         <div class="form-group">
            @Html.LabelFor(model => model.Accno, new {@class="col-md-2 control-label"})

        <div class="col-md-10">
            @Html.EditorFor(model => model.Accno, new {@class="form-control"})
            @Html.ValidationMessageFor(model => model.Accno,"", new {@Style="color:red" })
        </div>
         </div>

         <div class="form-group">
            @Html.LabelFor(model => model.password, new {@class="col-md-2 control-label"})
      
        <div class="col-md-10">
            @Html.EditorFor(model => model.password, new {@class="form-control"})
            @Html.ValidationMessageFor(model => model.password,"", new {@Style="color:red"})
        </div>
               </div>        
            <button type="submit" class="btn btn-block btn-lg btn-primary">Sign in</button>
        
    <div class="bottom-tab"></div> 
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
