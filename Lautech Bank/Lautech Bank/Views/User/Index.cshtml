@model Lautech_Bank.Models.UserLogin

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container wrapper" >
            <header class="center">              
                <h2>Log In</h2>
              <hr>              
            </header>  

    <div class="row gap-y">
    <h2>Welcome to lautech E-Banking system</h2>    

        <div class="col-md-12">

             <form method="POST">          
            <fieldset>
                <legend style="color:red">@ViewBag.message</legend>
                    <div class="form-group">                        
                        <input type="text" class="form-control" name="Accno" placeholder="Account Number">
                        @Html.ValidationMessageFor(model => model.Accno,"",htmlAttributes: new { @class="error" })                        
                    </div>

                     
                 <div class="form-group">                        
                        <input type="password" class="form-control" name="password" placeholder="Password">
                     @Html.ValidationMessageFor(model => model.password,"", new {@Style="color:red" })  
                    </div>
                 
                    <div class="form-actions">                        
                        <button type="submit" class="btn btn-round btn-success pull-left">Sign in <i class="fa fa-arrow-circle-right"></i></button>
                    </div>              
                </fieldset>
          </form>
            </div>
</div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
